@import url(http://fonts.googleapis.com/css?family=Ubuntu:300,400,400italic);
@import '../components/font-awesome/css/font-awesome.min.css'
@import '../components/jmpress/animations.css'
@import '_settings'
@import 'roots-css/animation'

normalize()
base()
typography()
lists()

body
  transition all 0.5s ease-in-out
  background cosmos
  color white
  
  h1, h2, h3, h4, h5, h6
    color white

section
  size 650 650
  opacity 0
  transition all 0.5s ease-in-out
  padding 5px
  margin 0 auto

#fallback
  display none

.no-jmpress
  .planets, .back
    display none
  section
    opacity 1
  
  #fallback
    display block
  
  #disclaimer
    display none

p
  margin 10px 0px
  line-height 1.4em

section.active
  opacity 1

blockquote
  fs 0.8em

#back-intro
  size 1600 1000
  background url('../img/andromeda.jpg') no-repeat
  background-size 100% auto

#intro
  text-align left
  uppercase()
  text-shadow 0.1em 0.1em 0.1em #000
  h1, h3
    font-weight 100

.step-intro
  #back-intro
    opacity 1

.planets.do-fade-fast
  img
    position relative
    width 650px

.planets.has-fade-fast
  img
    display none

.ice.do-fade
  .clumsy
    display inline-block
    animation swing 3s infinite

.ice.has-fade
  .clumsy
    animation none
    
    &:hover
      display inline-block
      animation swing 3s infinite

@keyframes twerk
  0%
    transform rotate(0deg)
  100%
    transform rotate(15deg)

.step-lupov
  .sideways
    display inline-block
    animation twerk 3s
    animation-delay 1s
    animation-fill-mode forwards

.thinning
  font-weight 100

.safe.do-fade
  .shaky
    display inline-block
    animation shake 10s infinite

.safe.has-fade
  .shaky
    animation none
    
    &:hover
      display inline-block
      animation shake 10s infinite

.step-switch
  .snapped
    display inline-block
    animation flash 1s
    animation-delay 1s
    
    &:hover
      animation flash 1s

.dark
  color #000
  background #333

.answer
  text-align center
  font-family monospace
  pre()
  color cosmos
  border-left dotted
  border-right dotted
  fs 0.9em

#back-hyperspace
  size 1600 1000
  background url('../img/hyperspace.jpg') no-repeat
  background-size 100% auto

.step-hyperspace
  #back-hyperspace
    opacity 0.8

#back-x23
  size 50px
  border-radius(999px)
  background white

.step-x23
  #back-x23
    opacity 1
    transition-delay 2s

#starmap
  text-shadow 0.1em 0.1em 0.1em #000

#back-starmap
  size 1920 1080
  background url('../img/starmap.jpg')

.step-starmap
  #back-starmap
    opacity 1

#starmap
  text-shadow 0.1em 0.1em 0.1em #000

#back-galaxy
  size 1920 1200
  background url('../img/galaxy.jpg') no-repeat
  background-size 100% auto

.step-galaxy
  #back-galaxy
    opacity 1

#galaxy
  text-shadow 0.1em 0.1em 0.1em #000

#back-milkyway
  size 1440 900
  background url('../img/milkyway.jpg') no-repeat
  background-size 100% auto

.step-milkyway
  #back-milkyway
    opacity 1

#milkyway
  text-shadow 0.1em 0.1em 0.1em #000
  
  .answer
    text-shadow none

.step-man
  background black

.step-thend
  background white
  transition background 5s ease-in-expo
  transition-delay 2s

.step-credits
  background black

#little-arrow
  position absolute
  bottom 5px
  left 50%
  z-index 1000
  animation shake 15s infinite
  display none

.p1, .p2, .p3, .p4, .p5, .p6, .p7
  font-weight 100

.p1
  color green

.p2
  color light-blue

.p3
  color blue

.p4
  color orange

.p5
  color red

.p6
  color purple

.p7
  color yellow

.p8
  color light-blue

.p9
  color green